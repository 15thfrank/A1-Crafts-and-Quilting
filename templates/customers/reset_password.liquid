<section class="section">
  <div class="container">
    <div class="one-whole column collection_nav">
      <h1 class="collection_title">
        {{ 'customer.reset_password.title' | t }}
      </h1>
    </div>

    <div class="three-eighths columns medium-down--one-whole offset-by-five is-hidden-offset-mobile-only">
      <br />

      {% form 'reset_customer_password' %}
        <p>
          <em>
            {{ 'customer.reset_password.subtext' | t: email: email }}
          </em>
        </p>

        {{ form.errors | default_errors }}

        <div id="password">
          <label for="password">
            {{ 'customer.reset_password.password' | t }}
          </label>
          <input type="password" value="" name="customer[password]" id="customer_password" class="large password" size="16" />
        </div>

        <div id="password_confirm">
          <label for="password_confirmation">
            {{ 'customer.reset_password.password_confirm' | t }}
          </label>
          <input type="password" value="" name="customer[password_confirmation]" id="customer_password_confirmation" class="large password" size="16" />
        </div>

        <p>
          <input class="btn action_button" type="submit" value="{{ 'customer.reset_password.submit' | t }}" />
        </p>
      {% endform %}
    </div>
  </div>
</section>
